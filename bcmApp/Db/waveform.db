# Clock frequency converted into time in nanoseconds
record (aSub, "$(P):SAMP_TIME") {
  field(SNAM, "calcTimeArray")
  field(FTA, "LONG")
  field(FTVA, "DOUBLE")
  field(NOVA, "1024")
  field(INPA, "$(P):AmcClkFreq CP")
}


# Raw Waveform converted into 16 bit unsigned values
record (aSub, "$(P):$(CHAN):RWF_U16") {
  field(SNAM, "calcRWF16")
  field(FTA, "SHORT")
  field(FTVA, "SHORT")
  field(NOA, "1024")
  field(NOVA, "1024")
  field(INPA, "$(P):Stream$(CHAN)_16")
  field(SCAN, "1 second")
}
