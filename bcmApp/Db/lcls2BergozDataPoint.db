#records that hold the data point from the calibration 

#PS set point
record(ao, "$(P):PS_VOLTAGE$(POINT_NUM)"){
    field(DESC, "Power suply set point")
    field(EGU, "Volts")
    field(VAL, "$(POINT_VAL)")
}

#DVM count
record(ao, "$(P):DMM_READING$(POINT_NUM)"){
    field(DESC, "Actual voltage from the PS")
    field(EGU, "Volts")
}

record(mbbi, "$(P):PROCEED_AVG$(POINT_NUM)"){
    field(ZRVL, "0")
    field(ONVL, "1")
    field(ZRST, "Disable")
    field(ONST, "Enable")
    field(FLNK, "$(P):TRIG_AVG$(POINT_NUM)")
    field(PINI, "YES")
    field(SCAN, "Passive")
}

record(calcout, "$(P):TRIG_AVG$(POINT_NUM)"){
    field(INPA, "$(P):PROCEED_AVG$(POINT_NUM)")
    field(CALC, "A")
    field(OUT, "$(P):ADC_COUNT$(POINT_NUM).DISV PP")
    field(FLNK, "$(P):ADC_COUNT$(POINT_NUM)")
    field(SCAN, "Passive")
}

#ADC count
#compress record to average adc counts
record(compress, "$(P):ADC_COUNT$(POINT_NUM)"){
    field(DESC, "The list of recorded adc counts")
    field(NSAM, "1")
    field(N, "$(ADC_READING_NUM)")
    field(PINI, "NO")
    field(ALG, "N to 1 Average")
    field(BALG, "LIFO Buffer")
    field(INP, "$(P):AdcData NPP")
    field(SCAN, ".1 second")
}
